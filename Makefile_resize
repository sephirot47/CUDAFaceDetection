all: bin/test_resize.exe

bin/stbi.o: src/stbi.cpp
	g++ -std=c++11 -g -c src/stbi.cpp -o bin/stbi.o

bin/test_resize.o: src/test_resize.cpp
	g++ -std=c++11 -g -c -o bin/test_resize.o src/test_resize.cpp

bin/test_resize.exe: bin/stbi.o bin/test_resize.o
	g++ -std=c++11 -g bin/test_resize.o bin/stbi.o -o bin/test_resize.exe

clean:
	rm -rf *.o *.exe
	
ultraclean:
	rm -rf *.o* *.e* $(EXE)
