all: bin/image_load.exe
	./bin/image_load.exe images/will_image.png images/will_face.png
	xdg-open output/result.bmp

FLAGS  = -Iinclude

bin/image_load.o: src/image_load.cpp
	g++ -std=c++11 -c src/image_load.cpp -o bin/image_load.o $(FLAGS)

bin/stbi.o: src/stbi.cpp
	g++ -std=c++11 -c src/stbi.cpp -o bin/stbi.o $(FLAGS)
	
bin/image_load.exe: bin/image_load.o bin/stbi.o
	g++ -std=c++11 bin/image_load.o bin/stbi.o -o bin/image_load.exe

clean:
	rm -rf bin/*
